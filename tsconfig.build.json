{
  "extends": "./tsconfig.json",
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js", "./src/**/*.jsx"],
  "exclude": [
    "./src/**/*.stories.ts",
    "./src/**/*.stories.tsx",
    "./src/**/*.stories.js",
    "./src/**/*.stories.jsx",
    "./src/**/*.test.jsx",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./lib"
  }
}
